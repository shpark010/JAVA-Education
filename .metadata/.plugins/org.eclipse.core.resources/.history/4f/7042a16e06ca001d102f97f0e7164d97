package kr.or.kosa;

public class Test {

	public static void main(String[] args) {
		Machine can = new Machine();
		boolean run = false;
		while(!run) {
				System.out.println("****************");
				System.out.println("***캔 음료 자판기***");
				System.out.print("금액을 투입해 주세요 : ");
				int input = can.inputMoney();
				System.out.println("투입한 금액: " + input);
				System.out.println("음료를 선택하세요.");
				while(true) {
					int choice = can.choice();
					Drink selectDrink = can.selectDrink(choice);
					if(selectDrink.getAmount() > 0) {
						can.notice();
						can.compare();
						break;
					}else {
						System.out.println("해당 상품은 품절입니다. 다른 상품을 골라주세요");
					}					
				}
				
			}

	}

}
