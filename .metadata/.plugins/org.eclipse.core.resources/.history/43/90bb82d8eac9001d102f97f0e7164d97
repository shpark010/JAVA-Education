package kr.or.kosa;

public class Drink {
	private String drinkName;	//음료별 이름
	private int drinkPrice;		//음료별 가격
	private int amount;		//음료별 수량
	
	//
	public Drink(String drinkName, int drinkPrice, int amount) {
		this.drinkName = drinkName;
		this.drinkPrice = drinkPrice;
		this.amount = amount;
	}
	
	//음료별 가격정보 호출을 위한 getter
	public int getDrinkPrice() {
		return drinkPrice;
	}

	//음료별 수량 호출을 위한 getter
	public int getAmount() {
		return amount;
	}
	//음료별 수량 재설정을 위한 setter
	public void setAmount(int amount) {
		this.amount = amount;
	}
	
}
