class Zcar {
	String color;
	String gearType;
	int door;
	
	Zcar() {	//기본 설정
		this("red","auto",2);	//나를 다시 부르네 .... 오버라이딩 생성자 호출
		/*
		this.color = color;
		this.gearType = gearType;
		this.door = door;
		*/
	}
	
	Zcar(String color, String gearType, int door) {
		this.color = color;
		this.gearType = gearType;
		this.door = door;
	}
	void zcarPrint() {
		System.out.println(this.color + " , " +  this.gearType + " , " + this.door);
	}
}

class Zcar2 {
	String color;
	String gearType;
	int door;
	
	Zcar2() {	//기본 설정
		this.color = "red";
		this.gearType = "auto";
		this.door = 2;
	}
	
	Zcar2(String color, String gearType, int door) {
		this.color = color;
		this.gearType = gearType;
		this.door = door;
	}
	void socarPrint() {
		System.out.println(this.color + " , " +  this.gearType + " , " + this.door);
	}
}

public class Ex16_this {

	public static void main(String[] args) {
		Zcar zcar = new Zcar();
		zcar.zcarPrint();
		
		Zcar zcar2 = new Zcar("yellow", "auto", 10);
		zcar2.zcarPrint();
	}

}
