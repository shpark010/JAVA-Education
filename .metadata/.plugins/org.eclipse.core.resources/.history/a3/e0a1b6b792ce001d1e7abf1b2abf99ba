//두개의 설계도
class Tv {
	boolean power;
	int ch;
	
	void tvPower() {	//두개의 기능을 하나의 함수로 처리
		//boolean
		this.power = !this.power;	//전원 스위치(토글링)
	}
	void chUp() {
		this.ch++;
	}
	void chDown() {
		this.ch--;
	}
}

class Vcr {	//비디오 플레이어
	boolean power;
	
	void VcrPower() {
		this.power = !this.power;	//전원 스위치(토글링)
	}
	void play() {
		System.out.println("재생하기");
	}
	void stop() {
		System.out.println("정지하기");
	}
	void rew() {}
	void ff() {}
}
//설계도 2개
/*
class Tv
class Vcr

제품
Tv와 Vcr 합쳐진 제품

TvVcr 출시

class TvVcr extends Tv, Vcr -> (X) 다중 상속 금지
 */

