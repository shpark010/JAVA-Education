package kr.or.kosa;

public class Drink {
	private String dName;	//음료별 이름
	private int dPrice;		//음료별 가격
	private int dAmount;		//음료별 수량
	
	
	//addDrink() 함수 호출 시 각 음료별 field 설정
	public void addDrink(String name, int price, int amount) {	
		dName = name;
		dPrice = price;
		dAmount = amount;
	}
	
	//음료별 가격정보 호출을 위한 getter
	public int getdPrice() {
		return dPrice;
	}

	//음료별 수량 호출을 위한 getter
	public int getdAmount() {
		return dAmount;
	}
	
	
	
	
}
